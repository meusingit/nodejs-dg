	<script>function hide(){
		
  var x = document.getElementById("myaBtn");
  if (x.innerHTML.val === "Hello") {
    x.innerHTML.val = alert("Swapped text!");
  } else {
    x.innerHTML.val = "Send";
	x.id = "myaBtn";
//	x.value = document.getElementById("input").val;
  }

